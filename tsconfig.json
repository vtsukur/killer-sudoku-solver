{
    "esModuleInterop": true,
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "strict": true,
        "sourceMap": true,
        "allowJs": true,
        "outDir": "dist",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "./src/**/*",
        "./test/**/*"
    ],
    "exclude":[
        "./node_modules"
    ]
}
