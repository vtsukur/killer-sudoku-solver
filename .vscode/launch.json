    "version": "0.2.0",
    "configurations": [
        {
            "name": "[NPM] All Tests",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "test"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
            "type": "node"
        },
        {
            "name": "[NPM] Puzzle Solver Tests",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "test",
                "puzzleSolver.test.js"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
            "type": "node"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/index.js"
        }
    ]
}
